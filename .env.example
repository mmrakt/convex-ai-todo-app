# ===========================================
# Convex Configuration
# ===========================================
# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=

# Convex URL for development
VITE_CONVEX_URL=

# Setup script tracking
SETUP_SCRIPT_RAN=

# ===========================================
# Authentication Configuration
# ===========================================
# JWT private key - Generate a random 64-character string
# Generation method: openssl rand -hex 32
JWT_PRIVATE_KEY=

# ===========================================
# AI Provider Configuration
# ===========================================
# Choose AI provider: "openai", "anthropic", "gemini", "ollama"
AI_PROVIDER=ollama

# OpenAI Configuration (when AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Configuration (when AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration (when AI_PROVIDER=gemini)
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Ollama Configuration (when AI_PROVIDER=ollama, default)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ===========================================
# Web Search API Configuration (Optional)
# ===========================================
# Google Custom Search API
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Bing Search API
BING_SEARCH_API_KEY=

# SerpAPI (Google search results)
SERPAPI_KEY=

# ===========================================
# Application Settings
# ===========================================
# Log level
LOG_LEVEL=info

# AI features toggle
ENABLE_AI_FEATURES=true
